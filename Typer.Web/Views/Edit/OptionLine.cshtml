@model Typer.Domain.Entities.QuestionOption

<div id="option_@Model.Id" class="option">
    <div class="button delete" title="Delete this option"></div>
    <div class="button edit" title="Edit this option"></div>
    <div class="content">
        @Html.QuestionDisplayer(Model.Content)
    </div>
    <div class="weight">@Model.Weight</div>
</div>